<SCRIPT language="JavaScript">
	var nowDate=new Date();
	var nowYear=nowDate.getFullYear()-1911;
	var nowMonth=""+(nowDate.getMonth()+1);
	if(nowMonth.length!=2){
		nowMonth = "0" + nowMonth;
	}
	var nowDay=""+nowDate.getDate();
	if(nowDay.length!=2){
		nowDay = "0" + nowDay;
	}
	var nowHour=nowDate.getHours()+"";
	var nowMin=nowDate.getMinutes()+"";
	var nowSec=nowDate.getSeconds()+"";

	if(nowHour.length<2){
		nowHour = "0" + nowHour;
	}
	if(nowMin.length<2){
		nowMin = "0" + nowMin;
	}
	if(nowSec.length<2){
		nowSec = "0" + nowSec;
	}
	//約定書到期年月日
	var regDate = '[[%%REVE-REG-DATE%%]]';
	var regYY = regDate.substr(0,3);
	var getMM = regDate.substr(3,2);
	var getDD = regDate.substr(5,2);
	function getRegYY(){
		return regYY;
	}
	
	function getRegMM(){
		return getMM;
	}
	
	function getRegDD(){
		return getDD;
	}
	
	function getSID(sid){
		var sid = sid.substring(0,10);
		return sid;	
	}
	
	function getDateInfo(type){
		if (type=="0") return nowDate;
		if (type=="1") return nowYear;
		if (type=="2") return nowMonth;
		if (type=="3") return nowDay;
		if (type=="4") return nowHour;
		if (type=="5") return nowMin;
		if (type=="6") return nowSec;
		if (type=="7") return nowHour+":"+nowMin+":"+nowSec;
	}
	
</SCRIPT>
